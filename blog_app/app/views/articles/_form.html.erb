<%= form_with(model: article) do |f| %>
 
  <% if @article.errors.any? %>
    <ul>
      <% @article.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  <% end %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :body %><br />
    <%= f.text_field :body %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>